<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" xsi:type="MailApp">
  <Id>d1de5e7e-b066-4f5a-bcb7-2197cbd3b8b7</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>My Company</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="LLM Email Rewriter"/>
  <Description DefaultValue="Rewrites selected email text using an LLM."/>
  <IconUrl DefaultValue="https://localhost:3000/assets/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://localhost:3000/assets/icon-128.png"/>
  <SupportUrl DefaultValue="https://www.contoso.com/support"/>
  <AppDomains>
    <AppDomain>https://www.contoso.com</AppDomain>
    <AppDomain>http://localhost:11434</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://localhost:3000/taskpane.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadWriteMailbox</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
  <DisableEntityHighlighting>false</DisableEntityHighlighting>
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url"/>
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="GroupLabel"/>
                <!-- Removed the original ShowTaskpane button to avoid confusion as per interpretation of task -->
                <!-- If a taskpane is still desired, it should be added as a separate button -->
                <Control xsi:type="Button" id="msgReadRewriteSelectionButton"> <!-- Changed ID from ActionButton for clarity -->
                  <Label resid="RewriteButton.Label"/> <!-- Changed resid -->
                  <Supertip>
                    <Title resid="RewriteButton.Label"/> <!-- Changed resid -->
                    <Description resid="RewriteButton.Tooltip"/> <!-- Changed resid -->
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>rewriteSelectedText</FunctionName> <!-- Changed FunctionName -->
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://localhost:3000/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://localhost:3000/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://localhost:3000/assets/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://localhost:3000/commands.html"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://localhost:3000/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="LLM Tools"/> <!-- Changed GroupLabel -->
        <bt:String id="TaskpaneButton.Label" DefaultValue="Show Task Pane"/> <!-- This is now unused by active buttons -->
        <bt:String id="ActionButton.Label" DefaultValue="Perform an action"/> <!-- This is now unused by active buttons -->
        <bt:String id="RewriteButton.Label" DefaultValue="Rewrite Selected Text"/> <!-- Added new string -->
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Opens a pane displaying all available properties."/> <!-- Unused -->
        <bt:String id="ActionButton.Tooltip" DefaultValue="Perform an action when clicked."/> <!-- Unused -->
        <bt:String id="RewriteButton.Tooltip" DefaultValue="Rewrites the selected text using an LLM."/> <!-- Added new string -->
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>